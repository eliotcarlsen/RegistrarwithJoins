{% include 'pagehead.html.twig' %}
      <h1>Registrar Dashboard</h1>
      <div class="row">
        <div class="col-md-8">
          {% if students is not empty %}
          <h2>{{ students.getStudentName }}</h2>

          <ul>
            {% for course in courses %}
            <li>{{ course.getCourseTitle }}, {{ course.getCourseCode}}</li>
            {% endfor %}
          </ul>
            {% endif %}
            <form action="/edit_student/{{ students.getStudentId }}" method="post">
                <label for="student_name">Edit Full Name</label>
                <input type="hidden" name="_method" value="patch">
                <input id="student_name" name="student_name" type="text" class="form-control" placeholder="Student Full Name">

              <div class='form-group'>
                <label for="enroll_date">Edit Enrollment Date (YYYY-MM-DD)</label>
                <input id="enroll_date" name="enroll_date" type="text" class="form-control" placeholder="Enrollment Date (YYYY-MM-DD)">
              </div>
              <div class='form-group'>
                <h5>Select Classes</h5>
                <!--replace form below with one created from the registrars inputs-->

              {% for course in all_courses %}
                <input type="checkbox" name="course_select[]" value="{{ course.getCourseId }}" /> {{ course.getCourseTitle }}<br>
              {% endfor %}
              </div>
              <div class='form-group'>
                <button type="submit" class="btn btn-primary">Update Student</button>
              </div>
            </form>
          </div>
        <div class="col-md-4">
            <h2><a href="/">Home</a></h2>
            <h2><a href="/new_course">View All Courses</a></h2>
            <h2><a href="/all_students">View All Students</a></h2>
            <h2><a href="/all_departments">View All Departments</a></h2>
        </div>
      </div>

